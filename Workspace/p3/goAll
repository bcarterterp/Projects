#!/bin/csh -x
echo "////////////////////////////////////////////////////"
echo "///////////// running JLex /////////////////////////"
echo "////////////////////////////////////////////////////"
java JLex.Main mycc.lex
mv -f mycc.lex.java mycc/Yylex.java
echo "////////////////////////////////////////////////////"
echo "///////////// running CUP //////////////////////////"
echo "////////////////////////////////////////////////////"
java java_cup.Main mycc.cup
mv -f sym.java mycc/sym.java
mv -f parser.java mycc/parser.java
echo "////////////////////////////////////////////////////"
echo "///////////// building parser //////////////////////"
echo "////////////////////////////////////////////////////"
javac -g -d . mycc/*.java
csh ./goTest
